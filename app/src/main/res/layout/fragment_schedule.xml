<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="970dp"
        android:orientation="vertical"
        android:padding="20dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1">
            <!-- Semester Name -->
            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:background="@color/blu"
                    android:padding="8dp"
                    android:text="Semester Name        :"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/semesterName"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"

                    android:padding="16dp" />
            </TableRow>
            <!-- Registration Start Date -->
            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="51dp"
                    android:padding="8dp"
                    android:text="Registration Start Date     :"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/registrationStart"
                    android:layout_width="wrap_content"
                    android:layout_height="51dp"
                    android:padding="8dp" />
            </TableRow>
            <!-- Registration End Date -->
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="51dp"
                    android:textSize="20dp"
                    android:padding="8dp"
                    android:text="Registration End Date       :"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/registrationEnd"
                    android:layout_width="wrap_content"
                    android:layout_height="51dp"
                    android:padding="8dp" />
            </TableRow>
            <!-- Class Start Date -->
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="51dp"
                    android:padding="8dp"
                    android:textSize="20dp"
                    android:text="Class Start Date                  :"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/classStart"
                    android:layout_width="wrap_content"
                    android:layout_height="51dp"
                    android:padding="8dp" />
            </TableRow>
            <!-- Class End Date -->
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="51dp"
                    android:textSize="20dp"
                    android:padding="8dp"
                    android:text="Class End Date                    :"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/classEnd"
                    android:layout_width="wrap_content"
                    android:layout_height="51dp"
                    android:padding="8dp" />
            </TableRow>
            <!-- Midterm Start Date -->
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="51dp"
                    android:padding="8dp"
                    android:textSize="20dp"
                    android:text="Mid Term Start Date          :"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/midTermStart"
                    android:layout_width="wrap_content"
                    android:layout_height="51dp"
                    android:padding="8dp" />
            </TableRow>
            <!-- Final Exam Start Date -->
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="51dp"
                    android:padding="8dp"
                    android:textSize="20dp"
                    android:text="Final Exam Start Date       :"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/finalExamStart"
                    android:layout_width="wrap_content"
                    android:layout_height="51dp"
                    android:padding="8dp" />
            </TableRow>
            <!-- Semester Drop Last Date -->
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="51dp"
                    android:padding="8dp"
                    android:textSize="20dp"
                    android:text="Semester Drop Last Date :"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/semesterDrop"
                    android:layout_width="wrap_content"
                    android:layout_height="51dp"
                    android:padding="8dp" />
            </TableRow>
            <!-- Add Drop Start Date -->
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="51dp"
                    android:padding="8dp"
                    android:textSize="20dp"
                    android:text="Add Drop Start Date         :"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/addDrop"
                    android:layout_width="wrap_content"
                    android:layout_height="51dp"
                    android:padding="8dp" />
            </TableRow>
            <!-- Ter Fill Up Start Date -->
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="51dp"
                    android:padding="8dp"
                    android:textSize="20dp"
                    android:text="Ter Fill Up Start Date         :"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/terFillUp"
                    android:layout_width="wrap_content"
                    android:layout_height="51dp"
                    android:padding="8dp" />
            </TableRow>
        </TableLayout>

    </LinearLayout>
</ScrollView>





